      let wage = parseFloat(String(jQuery("#user_wage").val()).convertCurrencyBrToUs());
      if (!isNaN(wage)) {
        
        processData("CALCULATE_DEDUCTION", {wage: wage}, function(data) {
          jQuery("#user_deduction").val(data["deduction"].convertCurrencyUsToBr());
        })
      } else {

      }
    });    
  });
  